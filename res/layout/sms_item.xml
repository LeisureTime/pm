<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/keyword_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/keyword_icon1"
        android:layout_marginLeft="28dp" android:typeface="monospace" android:textColor="#000000" android:gravity="top"
        android:text="@+id/label1"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/label1"
        android:layout_below="@+id/label1" android:typeface="monospace" android:textColor="#000000" android:gravity="top"
        android:text="@+id/label2"
        android:textSize="15sp" />

</RelativeLayout>